<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_food_activity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="15dp"
        android:src="@drawable/image" />

    <TextView
        android:id="@+id/tv_name_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_food_activity"
        android:fontFamily="@font/roboto_medium"
        android:text="name"
        android:textColor="#243665"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_date_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_activity"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_food_activity"
        android:text="Date"
        android:textColor="#243665"
        android:fontFamily="@font/roboto_medium"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_price_food_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_activity"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_food_activity"
        android:fontFamily="@font/roboto_medium"
        android:text="price"
        android:textColor="#243665"
        android:textSize="15sp" />
</RelativeLayout>