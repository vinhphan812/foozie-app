<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg_item"
    android:elevation="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_food_vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_food_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="name"
        android:textAlignment="center"
        android:textColor="#243665"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/img_food_vertical"
        app:layout_constraintStart_toStartOf="@+id/img_food_vertical"
        app:layout_constraintTop_toBottomOf="@+id/img_food_vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>