<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg_item"
    android:elevation="15dp">


    <ImageView
        android:id="@+id/img_icon_voucher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ticket" />

    <TextView
        android:id="@+id/tv_name_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/roboto_black"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/tv_code_voucher"
        app:layout_constraintStart_toEndOf="@+id/img_icon_voucher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_code_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/tv_date_voucher"
        app:layout_constraintStart_toEndOf="@+id/img_icon_voucher"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_voucher" />

    <TextView
        android:id="@+id/tv_date_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_icon_voucher"
        app:layout_constraintTop_toBottomOf="@+id/tv_code_voucher" />
</androidx.constraintlayout.widget.ConstraintLayout>